{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
	{% if error %}
		<div>{{ error|trans }}</div>
	{% endif %}
	<div class="col-md-8 col-md-offset-2">
		<form action="{{ path("fos_user_security_check") }}" class="form-inline" method="post">
			{% if csrf_token %}
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			{% endif %}

			<div class="form-group">
				<div class="input-group">
					<input type="text" placeholder="Nom de personnage" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
					<div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
				</div>
			</div>

			<div class="form-group">
				<div class="input-group">
					<input placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" class="form-control" name="_password" required="required" />
					<div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
				</div>
			</div>

			<input type="submit" id="_submit" name="_submit" class="btn btn-default" value="{{ 'security.login.submit'|trans }}" />
		</form>
	</div>
</div>
