{% trans_default_domain 'FOSUserBundle' %}

    <div class="container fondgris">
        {% if error %}
            <div>{{ error|trans }}</div>
        {% endif %}
        <form action="{{ path("fos_user_security_check") }}" class="form-group" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="form-group">
                <div class="input-group">
                    <input type="text" placeholder="Nom de personnage" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" class="form-control" name="_password" required="required" />
                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                </div>
            </div>

            <input type="submit" id="_submit" name="_submit" class="btn btn-default" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>



{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/jq-2.2.4/dt-1.10.13/datatables.min.css"/>
    <style>



        .form-group{
            text-align: center;
            margin:30px;
        }

        .form-control {
            background-color: #fff;
            color: #000;
            border-radius: 0;
        }
    </style>
{% endblock %}